#! /usr/bin/env bash

#  __  __                        _
# |  \/  |                      | |
# | \  / | __ _ _ __  _   _  ___| |
# | |\/| |/ _` | '_ \| | | |/ _ \ |
# | |  | | (_| | | | | |_| |  __/ |
# |_|  |_|\__,_|_| |_|\__,_|\___|_|

# Usage: manuel [task]

if [[ $# = 0 ]]; then
  echo -e "  __  __                        _  "
  echo -e " |  \/  |                      | | "
  echo -e " | \  / | __ _ _ __  _   _  ___| | "
  echo -e " | |\/| |/ _\` | '_ \| | | |/ _ \ | "
  echo -e " | |  | | (_| | | | | |_| |  __/ | "
  echo -e " |_|  |_|\__,_|_| |_|\__,_|\___|_| "
  echo -e "Usage:\n  manuel [task]"
  exit 1
fi

if [[ -f manuelfile ]]; then
  source manuelfile
  eval $@
else
  echo -e "No manuelfile found, exiting"
  exit 1
fi

exit 0
